    <table>
        <tr>
            <label for="minSH">Liczba członków składających się do budżetu, Min:</label>
            <input type="text" value="" name="minSH"/><br><br>
        </tr>
        <tr>
            <label for="maxSH">Liczba członków składających się do budżetu, Max:</label>
